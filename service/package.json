{
  "name": "@impulselab/realtime-service",
  "version": "0.0.0",
  "description": "Hostable SSE broker and CLI for realtime communication",
  "type": "module",
  "main": "./dist/server.js",
  "bin": {
    "impulse-realtime": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
