  "author": "Impulse",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.23.8",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "@types/node": "^22.0.0"
  }
}